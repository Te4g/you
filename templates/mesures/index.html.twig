{% block title %}Mesures index{% endblock %}

{% block body %}
    <h1>Mesures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Poids</th>
                <th>Imc</th>
                <th>Img</th>
                <th>Muscle</th>
                <th>Hydratation</th>
                <th>DensiteOsseuse</th>
                <th>Bmr</th>
                <th>TxProteine</th>
                <th>AgeCorps</th>
                <th>GraisseViscerale</th>
                <th>GraisseSousCutanee</th>
                <th>PoidsNormal</th>
                <th>ControlePoids</th>
                <th>GraisseCorporelle</th>
                <th>PoidsSansGraisse</th>
                <th>PoidsMusculaire</th>
                <th>QtyProteine</th>
                <th>TourEpaule</th>
                <th>TourPoitrine</th>
                <th>BicepsG</th>
                <th>BicepsD</th>
                <th>TourTaille</th>
